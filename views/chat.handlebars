<script> if (!window.console) console = { log: function () { } }; </script>
<style>
    body {
        background-color: #07080d;
    }
</style>
<section id="chatbanner" style="background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)),
    url('./images/Chess-3D-Animation-Wallpaper.jpg');">

    <div id="chatjack">Jack Plays Chess</div>
    <div id="hdbusername">{{users.username}}</div>
    <div class="profile-buttons"><a href="./profile"><img src="./images/wK.png" alt="Link to Profile Page"
                id="profilelogo"></a>
        <br>My Profile
    </div>
    <div id="logoutButton">
        <button id="logout" style="margin-bottom: 6px;">Logout</button>
    </div>

</section>
<div>
    <div id="FenInDiv">
        Fen:<br />
        <input type="text" id="fenIn" />
        <button type="button" id="SetFen">Set Position</button>
    </div>

    <br>

    <div id="turn" class="hollow secondary" style="margin-top: 15px; margin-bottom: 6px;">
    </div>

    <div id="scene">
        <div class="modal" id="message">
            <div class="modal-content">
                <h5 id="user-color"></h5>
                <button class="modal-message hollow button secondary tiny ">OK</button>
            </div>
        </div>
    </div>

    <div id="buttons" style="margin-top: 15px; margin-bottom: 6px;">
        <button id="new" class="hollow button secondary" style="margin-bottom: 6px;">New Game</button>
        <button id="ready" class="hollow button secondary" style="margin-bottom: 6px;">Ready</button>
        <button id="save" class="hollow button secondary" style="margin-bottom: 6px;">Save</button>
        <button id="replay" class="hollow button secondary" style="margin-bottom: 6px;">Replay</button>
    </div>
</div>

<div id="messageContainer">
    <form data-abide novalidate id="chatContainer">
        <div id="chatHistoryHeader">
            <label for="chatroomLabel" class="chatroomLabel">Chatroom for viewers</label>
            <div class="grid-x">
                <div class="cell small-6 small-offset-6" id="chatHistory"></div>
            </div>
            <div class="grid-container">
                <div class="grid-x grid-margin-x">
                    <div class="cell small-12">
                        <input type="text" id="messageInput" placeholder="chat as {{users.username}}"
                            aria-describedby="messageinput" required>
                        <button id="sendButton" type="submit" class="hollow button secondary"
                            style="display: inline-block;">Send
                            Chat</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- This is the old 2D chess board with display:none. Still required for the engine to work! -->
<div id=" Board">
</div>
<div id="EngineOutput">Thinking Time: <br />
    <select id="ThinkTimeChoice">
        <option value="1">1s</option>
        <option value="2">2s</option>
        <option value="4">4s</option>
        <option value="6">6s</option>
        <option value="8">8s</option>
        <option value="10">10s</option>
    </select><br /><br /><br />
    <span id="BestOut">BestMove:</span><br />
    <span id="DepthOut">Depth:</span><br />
    <span id="ScoreOut">Score:</span><br />
    <span id="NodesOut">Nodes:</span><br />
    <span id="OrderingOut">Ordering:</span><br />
    <span id="TimeOut">Time:</span><br /><br />
    <button id="readyOld">Ready</button>
    <button type="button" id="SearchButton">Move Now</button><br />
    <button type="button" id="NewGameButton">New Game</button><br />
    <button type="button" id="FlipButton">Flip Board</button><br /><br />
    <button type="button" id="TakeButton">Take Back</button><br /><br /><br />
    <span id="GameStatus"></span>
</div>

<footer id="chatfooter">
    <div>USyd Boot Camp Feb 2020</div>
    <div>Project Two Chess Game</div>
    <div>&copy; Jasper Du, Rita Pang, Gerald Lam, Stewart Anstey</div>
</footer>

<script src="./js/chat-client.js"></script>